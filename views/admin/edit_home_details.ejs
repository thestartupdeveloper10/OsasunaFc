<section class="mt-28 py-10 px-4 bg-[#73a8dd]">

    <a href="/home">&larr; Back</a>
    <div class="admin-title">
      <h2>Edit Home Details</h2>
    </div>
    <form action="/home/delete-home-details/<%= detail._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
      </form>


    <form action="/home/update-home-details/<%= detail._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    
      <label for="title"><b>Home Title</b></label>
      <input type="text" placeholder="Home Title" name="title" value="<%= detail.title %>">
    
      <label for="title"><b>Home Brief</b></label>
      <input type="text" placeholder="Home Brief" name="brief"  value="<%= detail.brief %>">
      <label for="title"><b>Upload Image:</b></label>
      <input type="file" id="avatar" name="image"/>

      <button type="submit" value="Add" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>
    
    </form>

</section>